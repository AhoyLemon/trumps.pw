  .top-row
    .welcome-box
      figure.avatar(v-bind:style="{backgroundImage:'url('+my.avatar+')'}")
    .welcome-text
      span Hi, {{my.name}}!
  .instruction-row
    span(v-if="round.info" v-html="round.info")
    span(v-else) Enter your {{round.name}} credentials for 
      b {{round.points}} points!

  .formbox(v-if="round.type.name == 'credit card'")
  
    .icon-holder

      .icon-box(v-if="round.type.icon")
        img(:src="'svg/logo/'+round.type.icon")

    .input-holder
  
      label.card-number
        span Card Number
        input.card-number(type="text" v-mask="'#### #### #### ####'" placeholder="#### #### #### ####" v-model="creditCard.number" v-on:keyup="checkCreditCardType()" v-bind:class="{error: errors.cardNumber}")
        .error-msg.username-error(v-if="errors.cardNumber" v-html="errors.cardNumber")
      label.expiration
        span Expiration
        input(type="text" v-mask="'##/####'" placeholder="MM/YYYY" v-model="creditCard.expiration" v-bind:class="{error: errors.expiration}")
        .error-msg.username-error(v-if="errors.expiration" v-html="errors.expiration")
      label.cvc
        span CVC
        input(type="text" v-mask="'###'" placeholder="###" v-model="creditCard.cvc" v-bind:class="{error: errors.cvc}")
        .error-msg.username-error(v-if="errors.cvc" v-html="errors.cvc")

      .buttons
        button.skip(v-on:click="nextRound()") Skip
        button.submit(v-on:click="roundSubmit()") Redeem

  .formbox(v-else)

    .icon-holder

      .icon-box(v-if="round.type.icon")
        img(:src="'svg/logo/'+round.type.icon")

    .input-holder

      //- USERNAME
      label.username(v-if="round.type.name == 'Facebook'")
        span Email or Phone
        input(type="text" v-model="round.username")
        .error-msg.username-error(v-if="errors.username" v-html="errors.username")
      label.username(v-else-if="round.loginType == 'phone'")
        span Phone Number
        input(type="tel" v-mask="'(###) ###-####'" placeholder="(###) ###-####" v-model="round.username" v-bind:class="{error: errors.username}")
        .error-msg.username-error(v-if="errors.username" v-html="errors.username")
      label.username(v-else)
        span Username
        input(type="text" v-model="round.username")
        .error-msg.username-error(v-if="errors.username" v-html="errors.username")

      //- PASSWORD
      label.password
        span(v-if="round.passwordType") {{round.passwordType}}
        span(v-else) Password
        input(v-if="round.passwordType == 'PIN'" v-model="round.password" v-mask="'########'" v-bind:class="{error: errors.password}")
        input(v-else type="text" v-model="round.password" v-bind:class="{error: errors.password}")
        .error-msg.password-error(v-show="errors.password" v-html="errors.password")

      .buttons
        button.skip(v-on:click="nextRound()") Skip
        button.submit(v-on:click="roundSubmit()") Redeem